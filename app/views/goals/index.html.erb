<% person = current_user == @user ? "Your" : "#{ @user.username }'s" %>

<h2><%= person %> Goals</h2>

<ul>
  <% @goals.each do |g| %>
    <li>
      <a href="<%= goal_url(g) %>"><%= g.title %></a>
    </li>
  <% end %>
</ul>

<% if current_user == @user %>
  <%= button_to "Create Goal", new_user_goal_url(@user), method: :get %>
<% end %>
<%= link_to "All Users", users_url %>